<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".guncelle_activity">

    <TextView
        android:id="@+id/guncelle_text_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad"
        android:textSize="30sp"
        android:layout_gravity="center">
    </TextView>

    <TextView
        android:id="@+id/guncelle_text_soyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soyad"
        android:textSize="30sp"
        android:layout_gravity="center">
    </TextView>



    <EditText
        android:id="@+id/edt_guncelle_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Adı Güncelleyin"
        android:inputType="textPersonName"
        android:text=""
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/edt_guncelle_soyad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Soyadı Güncelleyin"
        android:inputType="textPersonName"
        android:text=""
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/guncelle_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Güncelle"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/sil_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sil"
        android:layout_gravity="center"/>


</LinearLayout>